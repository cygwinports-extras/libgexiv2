DESCRIPTION="GObject wrapper for Exiv2 library"
HOMEPAGE="http://trac.yorba.org/wiki/gexiv2"
SRC_URI="http://yorba.org/download/gexiv2/0.1/${P}.tar.bz2"
PATCH_URI="0.1.0-no-undefined.patch"

PKG_NAMES="${PN} libgexiv2_0 libgexiv2-devel"
libgexiv2_0_CONTENTS="usr/bin/*-0.dll usr/share/doc/"
libgexiv2_devel_CONTENTS="usr/include/ usr/lib/ usr/share/vala/"

src_compile() {
	lndirs
	cd ${B}
	./configure --prefix=/usr
	cygmake
}
